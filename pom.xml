<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>tw.com.softleader.data</groupId>
  <artifactId>specification-mapper-parent</artifactId>
  <version>0.0.1</version>
  <packaging>pom</packaging>

  <description>Specification binding API for Spring Data JPA</description>

  <modules>
    <module>domain</module>
    <module>starter</module>
  </modules>

  <organization>
    <name>Softleader</name>
    <url>http://www.softleader.com.tw</url>
  </organization>

  <scm>
    <url>https://github.com/softleader/specification-mapper</url>
    <connection>scm:git:git@github.com:softleader/specification-mapper.git</connection>
    <developerConnection>scm:git:git@github.com:softleader/specification-mapper.git
    </developerConnection>
    <tag>framework</tag>
  </scm>

  <pluginRepositories>
    <pluginRepository>
      <id>jcenter-snapshots</id>
      <name>jcenter</name>
      <url>http://oss.jfrog.org/artifactory/oss-snapshot-local/</url>
    </pluginRepository>
    <pluginRepository>
      <id>jcenter-releases</id>
      <name>jcenter</name>
      <url>http://jcenter.bintray.com</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <distributionManagement>
    <repository>
      <id>releases</id>
      <url>${softleader.releases.repository}</url>
    </repository>
    <snapshotRepository>
      <id>snapshots</id>
      <url>${softleader.snapshots.repository}</url>
    </snapshotRepository>
  </distributionManagement>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>${spring-boot.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <properties>
    <java.version>11</java.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <maven.compiler.target>${java.version}</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

    <jacoco.version>0.8.4</jacoco.version>

    <maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
    <maven-source-plugin.version>3.1.0</maven-source-plugin.version>
    <maven-javadoc-plugin.version>3.1.1</maven-javadoc-plugin.version>
    <maven-site-plugin.version>3.8.2</maven-site-plugin.version>
    <maven-antrun-plugin.version>1.8</maven-antrun-plugin.version>
    <maven-dependency-plugin.version>3.1.1</maven-dependency-plugin.version>
    <dependency-check-maven.version>5.2.4</dependency-check-maven.version>
    <sonar-maven-plugin.version>3.7.0.1746</sonar-maven-plugin.version>
    <formatter-maven-plugin.version>2.10.0</formatter-maven-plugin.version>

    <spring-boot.version>2.6.1</spring-boot.version>

    <softleader.releases.repository>http://svn.softleader.com.tw:8084/repository/maven-releases/
    </softleader.releases.repository>
    <softleader.snapshots.repository>http://svn.softleader.com.tw:8084/repository/maven-snapshots/
    </softleader.snapshots.repository>
    <softleader.thirdparty.repository>http://svn.softleader.com.tw:8084/repository/thirdparty/
    </softleader.thirdparty.repository>
    <softleader.jboss-public.repository>http://svn.softleader.com.tw:8084/repository/jboss-public/
    </softleader.jboss-public.repository>
    <spring-milestones.repository>https://repo.spring.io/milestone</spring-milestones.repository>
    <spring-release.repository>https://repo.spring.io/release</spring-release.repository>

    <format.skip>false</format.skip>
  </properties>

  <repositories>
    <repository>
      <id>releases</id>
      <url>${softleader.releases.repository}</url>
    </repository>
    <repository>
      <id>snapshots</id>
      <url>${softleader.snapshots.repository}</url>
    </repository>
    <repository>
      <id>thirdparty</id>
      <url>${softleader.thirdparty.repository}</url>
    </repository>
    <repository>
      <id>jboss-ga-repository</id>
      <url>${softleader.jboss-public.repository}</url>
    </repository>
    <repository>
      <id>spring-milestones</id>
      <name>Spring Milestones</name>
      <url>${spring-milestones.repository}</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>spring-release</id>
      <name>Spring Release</name>
      <url>${spring-release.repository}</url>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <groupId>net.revelc.code.formatter</groupId>
        <artifactId>formatter-maven-plugin</artifactId>
        <version>${formatter-maven-plugin.version}</version>
        <configuration>
          <configFile>${maven.multiModuleProjectDirectory}/ide-config/eclipse-format.xml
          </configFile>
          <skip>${format.skip}</skip>
        </configuration>
        <executions>
          <execution>
            <phase>process-sources</phase>
            <goals>
              <goal>format</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-source-plugin</artifactId>
            <version>${maven-source-plugin.version}</version>
            <configuration>
              <attach>true</attach>
            </configuration>
            <executions>
              <execution>
                <id>package</id>
                <goals>
                  <goal>jar-no-fork</goal>
                </goals>
              </execution>
              <execution>
                <id>attach-sources</id>
                <goals>
                  <goal>jar-no-fork</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>${maven-javadoc-plugin.version}</version>
            <executions>
              <execution>
                <id>attach-javadocs</id>
                <goals>
                  <goal>jar</goal>
                </goals>
                <configuration>
                  <quiet>true</quiet>
                  <doclint>none</doclint>
                  <show>package</show>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-site-plugin</artifactId>
            <version>${maven-site-plugin.version}</version>
          </plugin>
        </plugins>
      </build>
      <reporting>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>${maven-javadoc-plugin.version}</version>
            <configuration>
              <quiet>true</quiet>
              <doclint>none</doclint>
              <show>package</show>
            </configuration>
          </plugin>
        </plugins>
      </reporting>
    </profile>
  </profiles>

</project>
